{
  "name": "moat-docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bun x astro dev",
    "build": "bun run fetch:docs && bun x astro build",
    "preview": "bun x astro preview",
    "astro": "bun x astro",
    "fetch:docs": "bun scripts/fetch-moat-docs.ts",
    "check": "bun x astro check",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "test:lighthouse": "npm run build && lhci autorun",
    "validate": "npm run check && npm run lint && npm run build"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.1.0",
    "@astrojs/tailwind": "^5.1.4",
    "astro": "^5.16.15",
    "gray-matter": "^4.0.3",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
