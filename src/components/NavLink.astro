---
interface Props {
  href: string;
  number: string;
  currentPath: string;
}

const { href, number, currentPath } = Astro.props;
const isActive = currentPath.includes(href);
---

<li>
  <a
    href={href}
    class:list={[
      "flex items-center gap-2 py-2 text-sm border-l-2 transition-colors",
      isActive
        ? "text-stone-800 bg-stone-100 border-transparent -mx-4 md:-mx-6 px-4 md:px-6"
        : "text-stone-600 border-transparent hover:text-stone-800 px-0"
    ]}
  >
    <span class="text-[10px] text-stone-400 w-6">{number}</span>
    <slot />
  </a>
</li>
