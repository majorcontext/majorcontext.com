---
import BaseLayout from './BaseLayout.astro';
import NavLink from '../components/NavLink.astro';
import SectionHeader from '../components/SectionHeader.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { getProduct } from '../lib/products';
import { navigationSections } from '../config/navigation';

interface Props {
  title: string;
  description?: string;
  headings?: { id: string; text: string }[];
}

const { title, description, headings = [] } = Astro.props;
const currentPath = Astro.url.pathname;

// Get product configuration
const product = getProduct('moat');
---

<BaseLayout title={title} description={description}>
  <!-- Skip to main content link for keyboard users -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:bg-sky-700 focus:text-stone-100 focus:px-4 focus:py-2 focus:outline-2 focus:outline-sky-600"
  >
    Skip to main content
  </a>

  <div class="min-h-screen">
    <!-- Fixed Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-stone-100 border-b border-stone-300">
      <div class="flex items-center justify-between px-4 md:px-6 py-3">
        <!-- Left: Logo + Title (desktop) / Menu Toggle (mobile) -->
        <div class="flex items-center gap-3">
          <!-- Mobile Menu Toggle -->
          <button
            id="mobile-menu-toggle"
            class="md:hidden text-stone-800 p-1 focus-visible:outline-2 focus-visible:outline-sky-600 focus-visible:outline-offset-2"
            aria-label="Toggle menu"
            aria-expanded="false"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>

          <!-- Logo + Title (desktop) -->
          <a href={`/${product.id}`} class="hidden md:flex items-center gap-3 group focus-visible:outline-2 focus-visible:outline-sky-600 focus-visible:outline-offset-2">
            <img src="/logo.svg" alt="" class="w-6 h-6" loading="eager" decoding="async" />
            <span class="text-xs font-semibold tracking-[0.15em] text-stone-600 group-hover:text-stone-800 transition-colors">
              MAJOR CONTEXT
              <span class="text-stone-400 mx-1">|</span>
              <span class="text-stone-800">{product.displayName}</span>
            </span>
          </a>

          <!-- Title only (mobile) -->
          <a href={`/${product.id}`} class="md:hidden focus-visible:outline-2 focus-visible:outline-sky-600 focus-visible:outline-offset-2">
            <span class="text-xs font-semibold tracking-[0.15em] text-stone-800">
              {product.displayName}
            </span>
          </a>
        </div>

        <!-- Right: GitHub Link -->
        <a
          href={product.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-stone-600 hover:text-stone-800 transition-colors focus-visible:outline-2 focus-visible:outline-sky-600 focus-visible:outline-offset-2"
          aria-label="View on GitHub"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
        </a>
      </div>
    </header>

    <!-- Sidebar -->
    <aside
      id="sidebar"
      class="w-64 bg-stone-200 fixed top-0 pt-[57px] h-screen overflow-y-auto z-40
             transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out"
      aria-hidden="true"
    >
      <div class="px-4 md:px-6 py-6">

        <nav class="space-y-6" aria-label="Main navigation">
          {navigationSections.map((section) => (
            <div>
              <SectionHeader title={section.title} />
              <ul>
                {section.items.map((item) => (
                  <NavLink href={item.href} number={item.number} currentPath={currentPath}>
                    {item.label}
                  </NavLink>
                ))}
              </ul>
            </div>
          ))}
        </nav>
      </div>
    </aside>

    <!-- Overlay for mobile -->
    <div
      id="sidebar-overlay"
      class="fixed inset-0 bg-stone-900/50 z-30 hidden md:hidden"
      style="top: 57px;"
    ></div>

    <!-- Main Content -->
    <main id="main-content" class="md:ml-64 pt-[57px]" aria-label="Main content">
      <article class="max-w-3xl mx-auto px-6 md:px-12 py-8 md:py-12">
        <div class="prose prose-stone max-w-none
                    prose-headings:font-serif prose-headings:tracking-tight
                    prose-h1:text-3xl md:prose-h1:text-5xl prose-h1:font-normal prose-h1:leading-tight prose-h1:mb-4 md:prose-h1:mb-6
                    prose-h2:text-sm prose-h2:font-semibold prose-h2:uppercase prose-h2:tracking-widest prose-h2:text-stone-600 prose-h2:pb-3 prose-h2:mb-4 prose-h2:border-b prose-h2:border-stone-300 prose-h2:mt-8 md:prose-h2:mt-12 prose-h2:not-serif
                    [&>h1+h2]:mt-4 [&>h1+h2]:md:mt-6
                    prose-h3:text-base md:prose-h3:text-lg prose-h3:font-semibold prose-h3:mt-6 md:prose-h3:mt-8 prose-h3:mb-2 md:prose-h3:mb-3
                    prose-p:leading-relaxed prose-p:mb-4 prose-p:text-sm md:prose-p:text-base
                    prose-a:text-sky-700 prose-a:no-underline hover:prose-a:text-sky-800 hover:prose-a:underline
                    prose-code:font-mono prose-code:text-xs md:prose-code:text-sm prose-code:bg-stone-200 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-stone-600 prose-code:font-light prose-code:rounded-sm
                    prose-code:before:content-none prose-code:after:content-none
                    prose-pre:bg-stone-900 prose-pre:border-0 prose-pre:p-4 md:prose-pre:p-6 prose-pre:leading-loose prose-pre:overflow-x-auto
                    [&_pre_code]:!bg-transparent [&_pre_code]:!border-0 [&_pre_code]:!p-0 [&_pre_code]:!text-stone-200 [&_pre_code]:text-xs [&_pre_code]:md:text-sm
                    prose-strong:text-stone-800 prose-strong:font-semibold
                    prose-ul:my-4 prose-li:my-1
                    prose-hr:border-stone-300
                    prose-table:text-sm prose-table:overflow-x-auto">
          <slot />
        </div>
      </article>

      <TableOfContents headings={headings} />
    </main>
  </div>

  <script>
    import '../scripts/mobile-menu';
  </script>
</BaseLayout>
