---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Major Context"
  description="Run AI agents in isolated containers with credential injection and observability."
>
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-2xl">
      <!-- Logo -->
      <div class="mb-8">
        <img src="/logo.svg" alt="Major Context" class="w-24 h-24 mx-auto" />
      </div>

      <!-- Title -->
      <h1 class="font-serif text-4xl md:text-5xl font-normal leading-tight tracking-tight mb-4 text-stone-800">
        Major Context
      </h1>

      <!-- Subtitle -->
      <p class="text-lg text-stone-600 mb-8 leading-relaxed">
        Redirecting to moat documentation...
      </p>

      <!-- Manual link -->
      <div class="pt-4 border-t border-stone-300 inline-block">
        <a
          href="/moat"
          class="inline-block px-6 py-3 bg-sky-700 text-white text-sm font-medium rounded hover:bg-sky-800 transition-colors"
        >
          Go to Documentation
        </a>
      </div>
    </div>
  </div>

  <!-- Client-side redirect after a brief delay -->
  <script>
    // Redirect after 1 second (gives users time to see the page)
    setTimeout(() => {
      window.location.href = '/moat';
    }, 1000);
  </script>
</BaseLayout>
